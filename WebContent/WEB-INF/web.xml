<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>osa-webapp</display-name>
  <context-param>
    <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
    <param-value>fi.mamk.osa.core.messages</param-value>
  </context-param>
  <error-page>
    <error-code>500</error-code>
    <location>/error.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/404.jsp</location>
  </error-page>
  <filter>
    <display-name>Stripes Filter</display-name>
    <filter-name>StripesFilter</filter-name>
    <filter-class>net.sourceforge.stripes.controller.StripesFilter</filter-class>
    <init-param>
      <param-name>ActionResolver.Packages</param-name>
      <param-value>fi.mamk.osa.stripes</param-value>
    </init-param>
    <init-param>
      <param-name>ActionBeanContext.Class</param-name>
      <param-value>fi.mamk.osa.stripes.OsaActionBeanContext</param-value>
    </init-param>
    <init-param>
      <param-name>PopulationStrategy.Class</param-name>
      <param-value>fi.mamk.osa.stripes.OsaPopulationStrategy</param-value>
    </init-param>
    <init-param>
      <param-name>LocalePicker.Class</param-name>
      <param-value>fi.mamk.osa.stripes.OsaLocalePicker</param-value>
    </init-param>
    <init-param>
      <param-name>LocalizationBundleFactory.ErrorMessageBundle</param-name>
      <param-value>fi.mamk.osa.core.messages</param-value>
    </init-param>
    <init-param>
      <param-name>LocalizationBundleFactory.FieldNameBundle</param-name>
      <param-value>fi.mamk.osa.core.messages</param-value>
    </init-param>
    <init-param>
      <param-name>Validation.InvokeValidateWhenErrorsExist</param-name>
      <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>FileUpload.MaximumPostSize</param-name>
      <param-value>512m</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>StripesFilter</filter-name>
    <url-pattern>*.jsp</url-pattern>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>
  <filter-mapping>
    <filter-name>StripesFilter</filter-name>
    <servlet-name>StripesDispatcher</servlet-name>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>
  <servlet>
    <servlet-name>StripesDispatcher</servlet-name>
    <servlet-class>net.sourceforge.stripes.controller.DispatcherServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>osa-webapp</servlet-name>
    <servlet-class>fi.mamk.osa.core.Osa</servlet-class>
    <init-param>
      <param-name>config</param-name>
      <param-value>WEB-INF/config/osa.conf</param-value>
    </init-param>
    <init-param>
      <param-name>logger</param-name>
      <param-value>WEB-INF/config/log4j.properties</param-value>
    </init-param>
    <init-param>
      <param-name>defaultGui</param-name>
      <param-value>WEB-INF/config/orgs/default.xml</param-value>
    </init-param>
    <load-on-startup>10</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>StripesDispatcher</servlet-name>
    <url-pattern>*.action</url-pattern>
  </servlet-mapping>
  <listener>
    <listener-class>fi.mamk.osa.stripes.LoginAction</listener-class>
  </listener>
  <listener>
      <listener-class>fi.mamk.osa.stripes.OsaApplicationListener</listener-class>
  </listener>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>OSA</web-resource-name>
      <url-pattern>/*</url-pattern>
      <http-method>GET</http-method>
      <http-method>POST</http-method>
    </web-resource-collection>
    <user-data-constraint>
      <transport-guarantee>CONFIDENTIAL</transport-guarantee>
    </user-data-constraint>
  </security-constraint>
</web-app>